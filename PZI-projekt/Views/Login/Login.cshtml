@model PZI_projekt.ViewModels.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/login_styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300&family=Quicksand:wght@500&display=swap" rel="stylesheet">
    <title>MyAudi</title>
</head>
<body>
    <div class="container">
        <form class="form" method="post" asp-action="Login">
            <h1 class="form-title">Login</h1>
            <div class="form-input-group">
                <input asp-for="Email" type="text" class="form-input" autofocus placeholder="E-mail">
                <span asp-validation-for="Email" id="e-mail-validation"></span>
            </div>
            <div class="form-input-group">
                <input asp-for="Password" type="password" class="form-input" autofocus placeholder="Password">
                <span asp-validation-for="Password" id="password-validation"></span>
            </div>
            <button class="form-button" type="submit" @*asp-controller="FrontPage" asp-action="FrontPage"*@>Continue</button>
            <p class="form-text"><a href="#" class="form-link">Forgot your password?</a></p>
            <p class="form-text"><a asp-controller="CreateAccount" asp-action="CreateAccount" class="form-link" id="linkCreateAccount">Don't have an account? Sign up!</a></p>
            <div asp-validation-summary="ModelOnly" id="validation"></div>
        </form>
    </div>
</body>
</html>